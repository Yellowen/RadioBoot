      height: 3em;
      width: 100%;
      background: $black;
      //position: absolute;
      bottom: 0;
   }


   &.info {
      padding: 3em 0;
      //text-shadow: 0 1px 3px $gray;
      color: white;
      width: 100%;
      background: $green;
      .row {
         margin: 5em 0;
      }
   }

   &.details {
      border-radius: 3px;
      boarder: 1px solid $lighter_gray;
      background: white;
      margin-top: 3em;
      padding: 2em;
   }

}


.logo {
   padding-left:20px;
   padding-right:20px;
}



.btn {
   cursor: pointer;
   @include pad(0.5em 1em);
   text-shadow: 0 1px 3px $gray;
   border-radius: 4px !important;
   font-weight: 700;
   font-size: 1em;
   a {
      color: white;
   }
   &.red {
      background: $red;
      border: 1px solid darken($red, 5%);
      border-bottom: 5px solid $dark_red !important;
      color: white;
      &:hover {
         color: white;
         background: darken($red, 3%);
      }
   }

   &.blue {
      background: $blue;
      border: 1px solid darken($blue, 5%);
      border-bottom: 5px solid $dark_blue !important;
      color: white;
      &:hover {
         color: white;
         background: darken($blue, 3%);
      }
   }

   &.black {
      background: $dark_gray;
      border: 1px solid darken($dark_gray, 5%);
      border-bottom: 5px solid $darker_gray !important;
      color: white;
      &:hover {
         color: white;
         background: darken($dark_gray, 3%);
      }
   }

   &.green {
      background: $green;
      border: 1px solid darken($green, 5%);
      border-bottom: 5px solid darken($green, 30%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($green, 3%);
      }
   }
   &.gray {
      background: $lighter_gray;
      a {color: $darker_gray !important;}
      text-shadow: none !important;
      border: 1px solid darken($lighter_gray, 5%);
      border-bottom: 5px solid lighten($gray, 10%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($lighter_gray, 3%);
      }
   }
   &.twitter {
      background: $twitter;
      border: 1px solid darken($twitter, 5%);
      border-bottom: 5px solid darken($twitter, 30%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($twitter, 3%);
      }
   }
   &.facebook {
      background: $facebook;
      border: 1px solid darken($red, 5%);
      border-bottom: 5px solid darken($facebook, 30%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($facebook, 3%);
      }
   }


   i:after {
      padding-left: 0.4em;
   }

}

.post {
   height: 26em;
   background: white;
   border: 1px solid $lighter_gray;
   border-radius: 4px;
   text-align: left;
   @include pad(1em default default default);
   color: $gray;
   position: relative;
}

.scroll {
   position: absolute;
   top: 90%;
   width: 100%;
   text-align: center;
}

.bblue {
   border-bottom: 10px solid $blue !important;
}

.bgreen {
   border-bottom: 10px solid $green !important;
}
.bred {
   border-bottom: 10px solid $red  !important;
}

.redcolor {
   color: $red;
}

.para {
   @include pad(1em 0 0 0);
}

.copyright {
   position: absolute;
   bottom: 10px;
   width: 100%;
   text-align: center;
   font-size: 0.8em;
}

.buttons {
   position: absolute;
   @include calc(bottom, '10px');
   @include calc(right, '10px');

}

.mainsection {
   margin-top: 2em;
}


.box {
   //position: relative;
   text-align: center;
   display: block;
   min-height: 4em;
   color: $darker_gray;
   background: white;
   border: 1px solid $lighter_gray;
   border-radius: 4px;
   //opacity: 0.5;

   @include transition (background-image 300ms ease-in 0s);

   &:hover {
      background-image: $very_light_gray;
      @include transition (background-image 300ms ease-in 0s);
   }
   .title {
      @include pad(0.7em 0.5em);
      font-size: 1.2em;
      font-weight: 700;
      width: auto;
      height: 3em;
      border-radius: 4px 4px 0 0;
   }
   .body {
      @include pad(3em 1em);
      height: 100%;
   }
}



.sponsorboxes {

   .box {
      position: relative;
      background: white;
      border: 1px solid $lighter_gray;
      border-radius: 4px;
      text-align: center;
      @include pad(3em default 3em default);
      height: 12em;
      color: $gray;
      @include transition (background-image 300ms ease-in 0s);

      &:hover {
         background-color: $very_light_gray;
         @include transition (background-image 300ms ease-in 0s);
      }

      .hint {
         position: absolute;
         @include calc(bottom, '10px');
         color: $gray;
         font-size: 0.8em;
         @include calc(left, '0px');
         width: 100%;
         text-shadow: none;
      }
   }
   .yellowenbg {
      background: url(asset_path("yellowen_logo.png")) center center no-repeat white;
   }
   .karajlugbg {
      background: url(asset_path('karajlug_logo.png')) center center no-repeat white;
   }

}


.input {
   display: inline;
   width: 60% !important;
   margin: 10px 0 10px 5px;
}
.submit {
   width: 30%;
}

.red {
   background: $red;
   color: white;
}

.green {
   background: $green;
   color: white;
}

.blue {
   background: $blue;
   color: white;
}

.yellow {
   background: $yellow;
   color: $black;
}

.bigtitle{
   margin-top:15%;
   padding:1em;
   color: $almost_white;
   background-color:$darker_gray;
   opacity:0.8;
   border-radius: 6px;
   border:1px $darker_gray solid;
   text-align:center;

}
