@import "variables";
@import "lib/bourbon/bourbon";
@import "lib/bitters/bitters";
@import "lib/neat/neat";

@import "grid";
@import "modal";
@import "menu";
@import "progress";
@import "tooltip";

@import url("http://fonts.googleapis.com/css?family=Roboto");

* {
   padding: 0;
   margin: 0;
}

@mixin opensans {
   font-family: 'Roboto', sans-serif !important;
}

h1, h2, h3, h4, h5 {
   @include opensans;
   font-weight: 700;
}
p, span {
   @include opensans;
}

.center {
   text-align: center;
}

html, body {
   width: 100%;
   height: 100%;
   color: $darker_gray;

}

.main {
   background: url(asset_path('pat.png'));

}
section {
   border-bottom: 1px solid $gray;
   &.head {
      position: relative;
      width: 100%;
      min-height: 100%;
      height: 100%;
      overflow: auto;
      max-height: 100%;
      height: 50em;
      top: 0;
      //@include radial-gradient($red, $dark_red);
      //background: $almost_white;
      background: url('<%= image_path("radio_bg.png") %>') center center no-repeat;
      header {
         //padding-top: 30px;
         width: 100%;
         background: $red;
         .menu {
            ul {
               list-style: none;
               li {
                  padding: 0.5em 1em;
                  display: inline;
               }
            }
         }
      }
      .player {
         margin-top: 10em;
         h2 {
            text-align: center;
         }
      }
      .footer {
         text-shadow: 0 1px 3px $gray;
         height: 3em;
         width: 100%;
         background: $black;
         position: absolute;
         bottom: 0;
      }

   }

   &.info {
      padding: 3em 0;
      //text-shadow: 0 1px 3px $gray;
      color: white;
      width: 100%;
      background: $green;
      .row {
         margin: 5em 0;
      }
   }

   &.details {
      border-radius: 3px;
      boarder: 1px solid $lighter_gray;
      background: white;
      margin-top: 3em;
      padding: 2em;
   }

}

.logo {
}

.btn {
   cursor: pointer;
   @include pad(0.5em 1em);
   text-shadow: 0 1px 3px $gray;
   border-radius: 4px !important;
   font-weight: 700;
   @include opensans;
   font-size: 1em;
   a {
      color: white;
   }
   &.red {
      background: $red;
      border: 1px solid darken($red, 5%);
      border-bottom: 5px solid $dark_red !important;
      color: white;
      &:hover {
         color: white;
         background: darken($red, 3%);
      }
   }

   &.blue {
      background: $blue;
      border: 1px solid darken($blue, 5%);
      border-bottom: 5px solid $dark_blue !important;
      color: white;
      &:hover {
         color: white;
         background: darken($blue, 3%);
      }
   }

   &.black {
      background: $dark_gray;
      border: 1px solid darken($dark_gray, 5%);
      border-bottom: 5px solid $darker_gray !important;
      color: white;
      &:hover {
         color: white;
         background: darken($dark_gray, 3%);
      }
   }

   &.green {
      background: $green;
      border: 1px solid darken($green, 5%);
      border-bottom: 5px solid darken($green, 30%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($green, 3%);
      }
   }
   &.gray {
      background: $lighter_gray;
      a {color: $darker_gray !important;}
      text-shadow: none !important;
      border: 1px solid darken($lighter_gray, 5%);
      border-bottom: 5px solid lighten($gray, 10%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($lighter_gray, 3%);
      }
   }
   &.twitter {
      background: $twitter;
      border: 1px solid darken($twitter, 5%);
      border-bottom: 5px solid darken($twitter, 30%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($twitter, 3%);
      }
   }
   &.facebook {
      background: $facebook;
      border: 1px solid darken($red, 5%);
      border-bottom: 5px solid darken($facebook, 30%) !important;
      color: white;
      &:hover {
         color: white;
         background: darken($facebook, 3%);
      }
   }


   i:after {
      padding-left: 0.4em;
   }

}

.post {
   height: 26em;
   background: white;
   border: 1px solid $lighter_gray;
   border-radius: 4px;
   text-align: left;
   @include pad(1em default default default);
   color: $gray;
   position: relative;
}

.scroll {
   position: absolute;
   top: 90%;
   width: 100%;
   text-align: center;
}

.bblue {
   border-bottom: 10px solid $blue !important;
}

.bgreen {
   border-bottom: 10px solid $green !important;
}
.bred {
   border-bottom: 10px solid $red  !important;
}

.redcolor {
   color: $red;
}

.para {
   @include pad(1em 0 0 0);
}

.sponsorboxes {
   margin-top: 3em;

   .box {
      position: relative;
      background: white;
      border: 1px solid $lighter_gray;
      border-radius: 4px;
      text-align: center;
      @include pad(3em default 3em default);
      height: 12em;
      color: $gray;
      @include transition (background-image 300ms ease-in 0s);

      &:hover {
         background-image: $very_light_gray;
         @include transition (background-image 300ms ease-in 0s);
      }

      .hint {
         position: absolute;
         @include calc(bottom, '10px');
         color: $gray;
         font-size: 0.8em;
         @include calc(left, '0px');
         width: 100%;
         text-shadow: none;
      }
   }
   .yellowenbg {
      background: url(asset_path("yellowen_logo.png")) center center no-repeat white;
   }
   .rubycentralbg {
      background: url(asset_path('rubycentral.png')) center center no-repeat white;
   }

}

.copyright {
   position: absolute;
   bottom: 10px;
   width: 100%;
   text-align: center;
   font-size: 0.8em;
   @include opensans;
}

.buttons {
   position: absolute;
   @include calc(bottom, '10px');
   @include calc(right, '10px');

}


.float-left {
   float: <%= @locale == 'fa' ? "left" : "right" %>;
}

.float-right {
   float: <%= @locale == 'fa' ? "right" : "left" %>;
}