@import "variables";

* {
   padding: 0;
   margin: 0;
}



html, body {
   width: 100%;
   height: 100%;
   color: $black;

}

a{
   color: $almost_white;
   text-decoration: none;
}

.ui.gray.inverted.menu {
   background: $very_light_gray;
   border-bottom: 1px solid $lighter_gray;
   .item {
      color: $darker_gray;
   }
   .menu {
      background: $very_light_gray;
      .item {
         color: $darker_gray;
      }
   }

}


.fixed {
   position: fixed;
}

section {
   //border-bottom: 1px solid $gray;
   min-height: 60rem;

   &.gray {
      background: $very_light_gray;
      color: $dark_gray;

   }

   &.blue {
      color: white;
      background: $blue;
   }
   &.dark-blue {
      color: white;
      background: $dark_blue;
   }

   &.head {
      overflow-x: hidden;
   }

   .ui.page.grid.middle {
      padding-top: 20rem !important;
   }
}

section {
   &.graybg {
      background: $very_light_gray;
   }


   &.content {
      padding: 20% 0;
   }
   .footer {
      color: $gray;
      font-size: 0.8em;
      padding-top: 0.5em;
      height: 3em;
      width: 100%;
      background: $black;
      //position: absolute;
      bottom: 0;
   }


   &.info {
      padding: 3em 0;
      //text-shadow: 0 1px 3px $gray;
      color: white;
      width: 100%;
      background: $green;
      .row {
         margin: 5em 0;
      }
   }

   &.details {
      border-radius: 3px;
      boarder: 1px solid $lighter_gray;
      background: white;
      margin-top: 3em;
      padding: 2em;
   }

}


.logo {
   padding-left:20px;
   padding-right:20px;
}

.copyright {
   position: absolute;
   bottom: 10px;
   width: 100%;
   text-align: center;
   font-size: 0.8em;
}

.mainsection {
   margin-top: 2em;
}


.box {
   header {
         //padding-top: 30px;
      z-index: 995;
      height: 2.5em;
      width: 100%;
      background: $very_light_gray;
   //border-bottom: 1px solid $light_gray;
      h1 {
         padding-top: 0.25em;
         text-shadow: none !important;
         font-size: 1.4em;
         color: $dark_gray;
      }
      .menu {
         ul {
            padding-top: 0.5em;
            list-style: none;
            li {
               padding: 0.2em 1em;
               display: inline;
               a {
                  color: $dark_gray;
               }
            }
         }
      }
   }

}


.row {
   &.first {
      margin-top: 10rem !important;
   }
}

.scroll {
   color: $dark_gray;
}

.slug {
   font-size: 2em;
}

.opacity_link {
   opacity: 0.5;
   &:hover {
      opacity: 1;
   }
}


.ui.green.button {
   color: #fff !important;
   margin-top: 1px;
   &:hover {
      background: #58cb73 !important;
   }
}

footer {
   padding: 0.3em 0;
   background: $darker_gray;
   color: white;
}